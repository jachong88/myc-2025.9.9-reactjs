# MYC Studio - Development Environment Configuration
# This file is used when NODE_ENV=development (npm run dev)

# API Configuration - Spring Boot Development Server
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=15000

# Environment
VITE_ENV=development

# Feature Flags - Use MSW for development by default
VITE_USE_MOCK_API=true
VITE_USE_MSW=true

# Firebase Configuration (Development)
# These should be your development Firebase project settings
REACT_APP_FIREBASE_API_KEY=your-dev-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-dev-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-dev-firebase-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-dev-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Debug Configuration (enabled for development)
VITE_DEBUG_API=true
VITE_DEBUG_AUTH=true

# Development Server Configuration
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost
VITE_AUTO_OPEN_BROWSER=true
